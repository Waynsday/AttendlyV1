# =====================================================
# AttendlyV1 Environment Configuration Template
# =====================================================
# Copy this file to .env.local and update with your values
# NEVER commit .env.local to version control

# Application Settings
NODE_ENV=development
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/attendly_dev

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security Settings
SESSION_SECRET=your-secure-session-secret
JWT_SECRET=your-secure-jwt-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Feature Flags
FEATURE_STUDENT_PORTAL=false
FEATURE_PARENT_ACCESS=false
FEATURE_ADVANCED_ANALYTICS=false

# External Services (Optional)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@attendly.local

# =====================================================
# Aeries SIS API Configuration
# =====================================================
# Contact: Vince Butler (CTO) for API credentials
AERIES_API_BASE_URL=https://aeries.romoland.k12.ca.us/api
AERIES_API_KEY=your-aeries-api-key-here
AERIES_CLIENT_ID=your-aeries-client-id
AERIES_CLIENT_SECRET=your-aeries-client-secret
AERIES_DISTRICT_CODE=romoland
AERIES_CERTIFICATE_PATH=/certs/aeries-client.crt
AERIES_PRIVATE_KEY_PATH=/certs/aeries-private.key
AERIES_CA_CERT_PATH=/certs/aeries-ca.crt

# Aeries API Sync Configuration
AERIES_SYNC_ENABLED=true
AERIES_SYNC_SCHEDULE=0 1 * * * # Daily at 1:00 AM
AERIES_ATTENDANCE_START_DATE=2024-08-15
AERIES_ATTENDANCE_END_DATE=2025-06-12
AERIES_BATCH_SIZE=100
AERIES_RATE_LIMIT_PER_MINUTE=60

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
SENTRY_DSN=
LOG_LEVEL=debug

# Development Tools
NEXT_DISABLE_EXPERIMENTAL_FEATURES=1
GENERATE_SOURCEMAP=false

# Educational Compliance
FERPA_COMPLIANCE_MODE=enabled
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true