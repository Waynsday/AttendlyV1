# =====================================================
# AttendlyV1 Environment Configuration Template
# =====================================================
# Copy this file to .env.local and update with your values
# NEVER commit .env.local to version control

# Application Settings
NODE_ENV=development
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/attendly_dev

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security Settings
SESSION_SECRET=your-secure-session-secret
JWT_SECRET=your-secure-jwt-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Feature Flags
FEATURE_STUDENT_PORTAL=false
FEATURE_PARENT_ACCESS=false
FEATURE_ADVANCED_ANALYTICS=false

# External Services (Optional)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@attendly.local

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
SENTRY_DSN=
LOG_LEVEL=debug

# Development Tools
NEXT_DISABLE_EXPERIMENTAL_FEATURES=1
GENERATE_SOURCEMAP=false

# Educational Compliance
FERPA_COMPLIANCE_MODE=enabled
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true